<h1>
  <strong>Editing Book</strong>
</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :本のタイトル %>
  
  <h4>Body</h4>
  <%=f.text_area :感想 %>
  
  <%= f.submit 'Update Book' %>
  
  <span>
    <%= link_to "Show", book_path %>
  </span>
  <p>
    |
  </p>
  <span>
    <%= link_to "Back", "/books" %>
  </span>
<% end %>
  
  